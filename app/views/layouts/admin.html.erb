    <%= javascript_include_tag "admin/admin", "data-turbolinks-track": "reload" %>
  </head>
  <body>
    <div class="o-container">
      <div class="c-admin">
        <div class="c-admin__header">
          <h1 class="c-admin__header-title">Admin Panel</h1>
