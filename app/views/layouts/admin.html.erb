        </div>
        <nav class="c-admin__nav">
          <ul class="c-admin__nav-list">
            <li><%= link_to "Articles", admin_articles_path %></li>
            <li><a href="#">Users</a></li>
          </ul>
        </nav>
        <div class="c-admin__body">
          <%= yield %>
