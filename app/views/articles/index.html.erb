<div class="o-container-content">
  <div class="c-articles">
    <h1 class='c-articles-heading'>All Published Articles</h1>
    <table class="c-articles-table">
      <tr class="c-articles-table-row">
        <th class="c-articles-table-head">Title</th>
        <th class="c-articles-table-head">Text</th>
        <th class="c-articles-table-head"></th>
        <th class="c-articles-table-head"></th>
        <th class="c-articles-table-head"></th>
      </tr>

      <% @articles.each do |article| %>
        <tr class="c-articles-table-row">
          <td class="c-articles-table-cell"><%= article.title %></td>
          <td class="c-articles-table-cell"><%= article.text %></td>
          <td class="c-articles-table-cell"><%= link_to 'Show', article_path(article) %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
