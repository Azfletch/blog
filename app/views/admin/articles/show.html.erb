<div class="c-articles">
  <div class="c-articles__heading  c-text-charlie">
    <h1>
      <%= @article.title %>
    </h1>
  </div>
  <div class="c-articles__body  c-text-echo">
    <p>
      <%= @article.text %>
    </p>
  </div>
  <div class="c-articles__comments">
    <%= render @article.comments %>
    <h2>Add a comment:</h2>
    <%= render 'comments/form' %>
    <div class="c-button">
      <%= link_to 'Edit', edit_admin_article_path(@article) %>
      <%= link_to 'Back', admin_articles_path %>
    </div>
  </div>
</div>
