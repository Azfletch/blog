<%= form_for [:admin, @article] do |form| %>

  <% if @article.errors.any? %>
    <div id="error_explanation" class="c-error">
      <div class="c-error__title">
        <h2>
          <%= pluralize(@article.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
      </div>
      <div class="c-error__message">
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="o-form__edit">
    <div class="o-form__edit-title">
      <%= form.label :title %><br>
    </div>
    <div class="o-form__edit-input">
      <%= form.text_field :title, class: "o-form__edit-input-field" %>
    </div>
    <div class="o-form__edit-title">
      <%= form.label :text %><br>
    </div>
    <div class="o-form__edit-input">
      <%= form.text_area :text, class: "o-form__edit-input-field" %>
    </div>
    <p>
      <%= form.submit class: "o-form__edit-submit" %>
    </p>
  </div>

<% end %>
